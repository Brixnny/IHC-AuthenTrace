html {
  height: 100%;
  width: 100%;
}

.topheader {
  position: fixed;
  background-color: #ffd0d0;
  width: 97.5%;
  z-index: 100;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center; /*flex-start para alinear mas al logo */
  padding: 0px 20px;
  font-family: "Inter", sans-serif;
}

.menu-horizontal {
  list-style: none;
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 1200px;
  font-weight: 400;
  color: #161a1d;
}

.menu-horizontal li a {
  display: block;
  padding: 15px 20px;
  color: black;
  text-decoration: none;
}
.menu-horizontal li a:hover {
  color: #ba181b;
}

.menu-horizontal li:hover .menu-vertical {
  display: block;
}

.menu-vertical {
  padding: 0;
  position: absolute;
  display: none;
  list-style: none;
  width: 200px;
  background-color: rgb(239, 236, 236);
}

.menu-vertical li a {
  display: block;
  color: black;
  padding: 15px 15px 15px 20px;
  text-decoration: none;
}

.menu-vertical li:hover {
  background-color: black;
}

body {
  background-image: url("/img/challenge.png");
  background-size: cover; /* Cambia a 'cover' para cubrir el área sin estirarse */
  background-position: top center; /* Cambia la posición para que empiece desde la parte superior */
  background-repeat: no-repeat;
  height: 100vh; /* Cambia a 100vh para ajustar la altura del fondo */
  margin: 0;
  overflow-x: hidden;
}


/*Servicios/*/

/* Estilo general */
.principal-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  min-height: 99vh; /* Mantén esto para ocupar al menos la altura de la ventana */
  padding: 70px 70px;
  text-align: left;
}

.principal-info h3 {
  color: #161a1d;
  font-weight: bold;
  font-size: 28px;
  margin-top: 0;
  margin-bottom: 20px;
  text-align: left;
  font-family: "M PLUS Rounded 1c", sans-serif;
}
/*Letras en máyuscula*/
.Mayuscula {
  color: #660708;
  font-size: bold;
  font-weight: 700;
}

.principal-info h1 {
  color: #333333;
  font-size: 22px;
  margin-bottom: 15px;
  text-align: left;
  font-family: "Advent Pro", sans-serif;
}

.principal-info p {
  color: #161a1d;
  font-size: 16px;
  line-height: 1.6;
  max-width: 600px;
  text-align: left;
  font-family: "Afacad", sans-serif;
}

.btn_submit {
  background-color: #660708;
  color: #ffffff;
  font-size: 16px;
  padding: 10px 30px;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  margin-top: 0;
  align-self: left;
  font-family: "Inter", sans-serif;
}

.btn_submit:hover {
  background-color: #ba181b;
}

.logo img {
  width: 300px; /* Ajusta el ancho deseado */
  height: auto; /* Mantén la proporción original de la imagen */
}
/* servicios seccion  */

.servicios-section {
  width: 100%;
  margin: 0 auto;
  padding: 20px;
  line-height: 1.6;
  background-color: #ffffff;
}

.servicios-titulo {
  font-family: "Afacad", sans-serif;
  font-size: 2rem;
  font-weight: bold;
  text-align: center;
  margin-bottom: 15px;
}

.servicios-texto {
  font-family: "Advent Pro", sans-serif;
  font-size: 1.1rem;
  text-align: center;
  margin-bottom: 20px;
}

.btn_iniciar {
  display: flex; /* Utiliza Flexbox para alinear el texto y el ícono */
  align-items: center; /* Centra verticalmente el texto y el ícono */
  justify-content: space-between; /* Espacio entre el texto y el ícono */
  background-color: #8b1d2c;
  color: #ffffff;
  font-size: 16px;
  padding: 10px 30px;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  font-family: "Inter", sans-serif;
}

.btn-icon {
  width: 20px;
  height: 20px;
  margin-left: 8px; /* Espacio entre el texto y el ícono */
  font-size: 20px;
}

#Iniciar {
  display: flex; /* Activa Flexbox */
  justify-content: center; /* Centra el botón horizontalmente */
}

/* Nuevos estilos para los iconos alrededor del botón */
.button-icon-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
}

.icono-group {
  display: flex;
}

.icono-group.left {
  margin-right: 10px; /* Espacio entre el grupo de iconos y el botón */
}

.icono-group.right {
  margin-left: 10px; /* Espacio entre el grupo de iconos y el botón */
}

.icono {
  margin: 0 160px; /* Espacio entre los iconos */
}

.icono img {
  width: 40px; /* Ajusta el tamaño de los iconos */
  height: 40px; /* Ajusta el tamaño de los iconos */
}

/*nosotros seccion*/

.nosotros-section {
  width: 100%;
  margin: 0 auto;
  padding: 20px;
  line-height: 1.6;
  background-color: rgba(186, 24, 27, 0.15); /* 15% de opacidad */
}

.nosotros-info {
  display: flex; /* Activa Flexbox */
  align-items: center; /* Alinea verticalmente el contenido si es necesario */
  justify-content: space-between; /* Separa el texto y la imagen */
}

.nosotros-texto {
  flex: 1;
  font-size: 1.5rem;
  text-align: left;
  margin-right: 20px;
  margin-left: 20px;
  font-family: "Afacad", sans-serif;
}

.nosotros-texto strong {
  color: #ba181b; /* Cambia el color a rojo */
  font-weight: bold;
}
